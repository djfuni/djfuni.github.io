<script>
	function beforeSubmit(_this)
	{
		var is_checked = $('#agreePrivacy:checked')
		if(is_checked.length == 0)
		{
			toastr.error('请勾选服务条款与隐私政策！');
			return false;
		}
		$(_this).parents('form').submit();
	}
</script>
